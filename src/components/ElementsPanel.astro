---
import Element from "./Element.astro";

const response = await fetch(
  "https://redalchemy.redriottank.com/api/elements/base"
);
const elements = await response.json();
---

<div class="w-full md:w-80 bg-gray-800 rounded-xl p-6 min-h-[70vh]">
  <h2 class="text-2xl font-bold mb-6 text-yellow-400">Elements</h2>
  <div class="grid grid-cols-2 gap-3" id="elements-panel">
    {
      elements.map((element: any) => (
        <Element
          name={element.name.toLowerCase()}
          uuid={element.id}
          emoji={element.icon}
          draggable={true}
        />
      ))
    }
  </div>
</div>
